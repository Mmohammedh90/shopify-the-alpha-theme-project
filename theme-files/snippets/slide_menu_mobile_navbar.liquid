<nav class="navbar_mobile">
  <ul class="menu">
    {% for link in section.settings.nav_bar_id_mobile.links %}
      <li class="menu-item {% if link.links.size > 0 %}menu_dropdown{% endif %}">
        <a href="{{ link.url }}">{{ link.title }}</a>

        {% if link.links.size > 0 %}
          <span class="caret_symbol gofwd"><i class="fa-light fa-angle-right"></i></span>
          <ul class="dropdown-child">
            <li class="menu-item cls_drpdwn_child">
              <span class="caret_symbol goback"><i class="fa-light fa-angle-left"></i></span>
              {{ 'general.link.goback' | t }}
            </li>
            {% for child_link in link.links %}
              <li class="menu-item {% if child_link.links.size > 0 %}menuchild_dropdown{% endif %}">
                <a href="{{ child_link.url }}">{{ child_link.title }}</a>

                {% if child_link.links.size > 0 %}
                  <span class="caret_symbol gofwd"><i class="fa-light fa-angle-right"></i></span>
                  <ul class="dropdown-grandchild">
                    <li class="menu-item cls_drpdwn_grandchild">
                      <span class="caret_symbol goback"><i class="fa-light fa-angle-left"></i></span>
                      {{ 'general.link.goback' | t }}
                    </li>
                    {% for grandchild_link in child_link.links %}
                      <li class="menu-item">
                        <a href="{{ grandchild_link.url }}">
                          {{- grandchild_link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
