<nav class="navbar_a">
  <ul class="menu">
    {% for link in section.settings.nav_bar_id.links %}
      <li class="menu-item">
        <a href="{{ link.url }}">{{ link.title }}</a>

        {% if link.links.size > 0 %}
          <span class="caret_symbol"><i class="fa-light fa-angle-down"></i></span>
          <ul class="dropdown-child">
            {% for child_link in link.links %}
              <li class="menu-item">
                <a href="{{ child_link.url }}">{{ child_link.title }}</a>

                {% if child_link.links.size > 0 %}
                  <span class="caret_symbol"><i class="fa-light fa-angle-right"></i></span>
                  <ul class="dropdown-grandchild">
                    {% for grandchild_link in child_link.links %}
                      <li class="menu-item">
                        <a href="{{ grandchild_link.url }}">
                          {{- grandchild_link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
