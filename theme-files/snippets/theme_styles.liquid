{% comment %}
  /* Fonts */
{% endcomment %}
{% assign font_heading = settings.header_font_1 %}
{% assign font_standard = settings.general_font_1 %}

{% comment %}
  /* Colors */
{% endcomment %}
{% assign _bg_color_1 = settings.bkgnd_color_1 %}
{% assign _bg_color_2 = settings.bkgnd_color_2 %}
{% assign _bar_color_1 = settings.bar_color_1 %}

{% comment %}
  /* Announce Bar  */
{% endcomment %}
{% assign _announce_bg_color = settings.anounce_bar_color %}
{% assign _announce_text_color = settings.anounce_bar_textcolor %}
{% assign _announce_font_size = settings.anounce_bar_fontsize %}
{% assign _announce_bold = settings.bar_content_bold %}
{% assign _announce_center = settings.bar_content_center %}

<style>
  {{ font_heading | font_face }}
  {{ font_standard | font_face }}


  /* General Customization */

  html, body {
      height: 100%;
      width: 100%;
      overflow-x: hidden!important;
      padding: 0;
      margin: 0;
      font-family: {{ font_heading.family }}, {{ font_heading.fallback_families }};;
  }

  .devmode {
      width: 100%;
      padding: 10px 0px;
      background-color: {{ _bar_color_1 }};
  }


  #preloader {
      position: fixed;
      height: 100vh;
      width: 100%;
      background-color: {{ _bg_color_1 }};
      z-index: 99999;
      text-align: center;
      padding-top:16em;
      opacity:1;
      transition: opacity 1s ease-out;
  }

  .announce_bar {
      width: 100%;
      padding: 10px 0px;
      text-decoration:none;
      display: block;
      background-color: {{ _announce_bg_color }};
      color: {{ _announce_text_color }};
      {% unless _announce_center == false %}text-align:center;{% endunless %}
  }

  .announce_bar > span {
      font-size: {{ _announce_font_size }}px;
      {% unless _announce_bold == false %}font-weight: bold;{% endunless %}
      padding: 0px 10px;
  }
</style>
