* {
  font-family: "{{ font_heading.family }}", "{{ font_heading.fallback_families }}";
}

html,
body {
  height: 100%;
  width: 100%;
  overflow-x: hidden !important;
  padding: 0;
  margin: 0;
}

/* Styling Universal sections (Header,Footer..etc)*/
.devmode {
  width: 100%;
  padding: 10px 0px;
  background-color: "{{ _bar_color_1 }}";
}

.announce_bar {
  width: 100%;
  padding: 10px 0px;
  text-decoration: none;
  display: block;
  background-color: "{{ _announce_bg_color }}";
  color: "{{ _announce_text_color }}";
  /*!--{% unless _announce_center == false %}text-align:center;{% endunless %}--*/
}

.announce_bar > span {
  font-size: "{{ _announce_font_size }}"px;
  /*!--{% unless _announce_bold == false %}font-weight: bold;{% endunless %}--*/
  padding: 0px 10px;
}